<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= "#{@user.fname} #{@user.lname}" %>
</p>

<p>
  <b>Account number:</b>
  <%= @user.account_number %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Address:</b>
  <%= @user.address %>
