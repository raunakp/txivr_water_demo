<h2 style="text-align:left">Users</h1>

<table border = "1" cellpadding = 4>
  <tr>
    <th>Phone number</th>
    <th>First name</th>
    <th>Last name</th>
    <th>email</th>
    <th>Address</th>
    <th>Account number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.phone_number %></td>
    <td><%= user.fname %></td>
    <td><%= user.lname %></td>
    <td><%= user.email %></td>
    <td><%= user.address %></td>
    <td><%= user.account_number %></td>
    <td><%= link_to 'Readings', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

