<h2 style="text-align:left">Readings</h1>

<table border = "1" cellpadding = 4>
  <tr>
    <th>Reading</th>
    <th>User</th>
    <th>Account #</th>
    <th>Created at</th>
    <!--th></th>
    <th></th>
    <th></th-->
  </tr>

<% @readings.each do |reading| %>
  <tr>
    <td><%= reading.meter_reading %></td>
    <td><%= "#{reading.user.fname} #{reading.user.lname}" %></td>
    <td><%= reading.user.account_number %></td>
    <td><%= reading.created_at.in_time_zone('Eastern Time (US & Canada)').to_formatted_s(:short)%></td>
    <!--td><%#= link_to 'Show', reading %></td>
    <td><%#= link_to 'Edit', edit_reading_path(reading) %></td>
    <td><%#= link_to 'Destroy', reading, method: :delete, data: { confirm: 'Are you sure?' } %></td-->
  </tr>
<% end %>
</table>

